<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="https://jakarta.ee/xml/ns/jakartaee"
		 xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
		 id="WebApp_ID" version="5.0">
    <display-name>LB5jaxwsBookServiceWebClient</display-name>
    <context-param>
        <description>Wsdl location</description>
        <param-name>wsdl</param-name>
        <param-value>http://localhost:9000/albums?wsdl</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <display-name>EncodingFilter</display-name>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.album.server.filter.EncodingFilter</filter-class>
        <init-param>
            <description/>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>ua.nure.album.server.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <description>List existing albums</description>
        <display-name>ListAlbums</display-name>
        <servlet-name>ListAlbums</servlet-name>
        <servlet-class>ua.nure.album.server.client.web.ListAlbums</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListAlbums</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddAlbum</display-name>
        <servlet-name>AddAlbum</servlet-name>
        <servlet-class>ua.nure.album.server.client.web.AddAlbum</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAlbum</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddImage</display-name>
        <servlet-name>AddImage</servlet-name>
        <servlet-class>ua.nure.album.server.client.web.AddImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddImage</servlet-name>
        <url-pattern>/addimage</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>GetImageByUrl</display-name>
        <servlet-name>GetImageByUrl</servlet-name>
        <servlet-class>ua.nure.album.server.client.web.GetImageByUrl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetImageByUrl</servlet-name>
        <url-pattern>/getimagebyurl</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>RemoveImage</display-name>
        <servlet-name>RemoveImage</servlet-name>
        <servlet-class>ua.nure.album.server.client.web.RemoveImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveImage</servlet-name>
        <url-pattern>/removeimage</url-pattern>
    </servlet-mapping>
</web-app>